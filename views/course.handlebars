<!DOCTYPE html>
<html>
  <head>
    <link href="/course.css" rel="stylesheet" type="text/css">
    <script type="text/javascript" src="/client.js"></script>
  </head>
  <body>
    <div class="container custom-container">
      <div class="row">
        {{>navbar}}
      </div>
      <div class="row">
        <div class="col-md-12 course-overview-title">
          <h2 class="text-center">Course Overview</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <h3>Lectures</h3>
          <table id="lectures">
            {{#if lecture}}
              {{#each lecture}}
                <tr>
                  <td>
                    <a href="/course/{{../course_id}}/lecture/{{this.lecture_id}}" id={{this.lecture_id}}>{{this.title}}</a>
                  </td
                </tr>
              {{/each}}  
            {{/if}}  
          </table>
        </div>
        <div class="col-md-6">
          <h3>Assignments</h3>
          <table id="assignments">
            {{#if assignment}}
              {{#each assignment}}
                <tr>
                  <td>
                    <a href="/course/{{../course_id}}/assignment/{{this.assignment_id}}" id={{this.assignment_id}}>{{this.title}}</a>
                  </td>
                </tr>
              {{/each}}  
            {{/if}}  
          </table>
        </div>
      </div>
    </div>  
  </body>