<!DOCTYPE html>
<html>
  <head>
    <link href="/course.css" rel="stylesheet" type="text/css">
    <script type="text/javascript" src="/client.js"></script>
  </head>
  <body>
    <div class="container custom-container">
      <div class="row">
        {{>navbar}}
      </div>
      <div class="row">
        <div class="col-md-12" id="course-banner">
          <img src="/images/{{this.name}}.jpeg" id="course-image">
        </div>
      </div>
      <div class="row">
        <div class="col-md-12" id="course-title">
          {{this.name}}
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table" id="course-table">
            <tbody>
              <tr>
                <th>Lectures</th>
                <th>Assignments</th>
              </tr>
              <tr>
                <td>
                  <ul id="lecture-list">
                    {{#if lecture}}
                      {{#each lecture}}
                        <li>
                          <a href="/course/{{../course_id}}/lecture/{{this.lecture_id}}" id={{this.lecture_id}}>{{this.title}}</a>
                        </li>
                      {{/each}}
                    {{/if}}
                  </ul>
                </td>
                <td>
                  <ul id="assignment-list">
                    {{#if assignment}}
                      {{#each assignment}}
                        <li>
                          <a href="/course/{{../course_id}}/assignment/{{this.assignment_id}}" id={{this.assignment_id}}>{{this.title}}</a>
                        </li>
                      {{/each}}
                    {{/if}}
                  </ul>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>  
  </body>