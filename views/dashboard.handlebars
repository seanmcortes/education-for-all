<!DOCTYPE html>
<html>
  <head>
    <link href="dashboard.css" rel="stylesheet" type="text/css">
    <meta charset="UTF-8">
  </head>
  <body>
    {{> navbar }}

      <div class="container">
        <div class="row">
          <div class="col-sm-8 offset-sm-2">
            <table id="course-table">
              <tr>
                {{#if courseLink}}
                  {{#each courseLink}}
                    <td>
                      <a href="/course/{{this.course_id}}" id={{this.id}}>
                        <div class="card text-white bg-dark" style="width: 18rem;">
                          <div class="card-body">
                              <h5 class="card-text text-center">{{this.name}}</h5>
                          </div>
                        </div>
                      </a>
                    </td>
                  {{/each}}
                {{/if}} 
              </tr>   
            </table> 
          </div>
        </div> 
      </div>
    <script type="text/javascript" src="/client.js"></script>
  </body>
</html>
